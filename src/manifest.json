{
  "manifest_version": 2,
  "name": "daily-pomodoro",
  "version": "1.0.0",
  "description": "Pomodoro timer",
  "author": "Centell <centell@me.com>",
  "main": "app.js",
  "icons": {
    "90": "icons/icon-90.png"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/icon-90.png",
    "default_title": "Daily-Pomodoro",
    "default_popup": "views/popup.html"
  },
  "background": {
    "page": "views/background.html",
    "persistent": true
  },
  "options_page": "views/settings.html",
  "options_ui": {
    "page": "views/settings.html",
    "browser_style": true
  }
}
