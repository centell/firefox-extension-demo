{
  "manifest_version": 2,
  "name": "firefox-extension-init",
  "version": "1.0.0",
  "description": "firefox-extension-init",
  "author": "Centell <centell@me.com>",
  "icons": {
    "90": "icons/icon-90.png"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/icon-90.png",
    "default_title": "App",
    "default_popup": "views/popup.html"
  },
  "background": {
    "page": "views/background.html",
    "persistent": true
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "firefox-exteionsion-init@example.com"
    }
  }
}
